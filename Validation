

final class Validation
{
 
        /*
        * METHOD TO CHECK INPUT IS NUMBER OR NOT
        */
       public  static  boolean isNumber(String input)
        {
          try{
                 Integer.parseInt((String)input);
                  
                     return true;
             }catch(NumberFormatException nfe)
             {
                  return false;
             }
        
        }
 
}
